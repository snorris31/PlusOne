<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:padding="10dp">

    <TextView
        android:id="@+id/title"
        android:textSize="16sp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:text="Title:"/>

    <TextView
        android:id="@+id/title_field"
        android:textSize="16sp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="5dp"
        android:layout_marginStart="5dp"
        android:layout_alignTop="@id/title"
        android:layout_toRightOf="@id/title"
        android:layout_toEndOf="@id/title"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"/>

    <TextView
        android:id="@+id/poster"
        android:textSize="16sp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp"
        android:layout_below="@id/title_field"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:text="Poster:"/>

    <TextView
        android:id="@+id/poster_field"
        android:textSize="16sp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="5dp"
        android:layout_marginStart="5dp"
        android:layout_alignTop="@id/poster"
        android:layout_toRightOf="@id/poster"
        android:layout_toEndOf="@id/poster"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"/>

    <TextView
        android:id="@+id/type"
        android:textSize="16sp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp"
        android:layout_below="@id/poster_field"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:text="Event type:"/>

    <TextView
        android:id="@+id/type_field"
        android:textSize="16sp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="5dp"
        android:layout_marginStart="5dp"
        android:layout_alignTop="@id/type"
        android:layout_toRightOf="@id/type"
        android:layout_toEndOf="@id/type"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"/>

    <TextView
        android:id="@+id/date"
        android:textSize="16sp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp"
        android:layout_below="@id/type_field"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:text="Date:"/>

    <TextView
        android:id="@+id/date_field"
        android:textSize="16sp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="5dp"
        android:layout_marginStart="5dp"
        android:layout_alignTop="@id/date"
        android:layout_toRightOf="@id/date"
        android:layout_toEndOf="@id/date"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"/>

    <TextView
        android:id="@+id/address"
        android:textSize="16sp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp"
        android:layout_below="@id/date_field"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:text="Address:"/>

    <TextView
        android:id="@+id/address_field"
        android:textSize="16sp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="5dp"
        android:layout_marginStart="5dp"
        android:layout_alignTop="@id/address"
        android:layout_toRightOf="@id/address"
        android:layout_toEndOf="@id/address"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"/>

    <TextView
        android:id="@+id/description"
        android:textSize="16sp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp"
        android:layout_below="@id/address_field"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:text="Description:"/>

    <TextView
        android:id="@+id/description_field"
        android:textSize="16sp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="5dp"
        android:layout_marginStart="5dp"
        android:layout_alignTop="@id/description"
        android:layout_toRightOf="@id/description"
        android:layout_toEndOf="@id/description"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"/>

</RelativeLayout>